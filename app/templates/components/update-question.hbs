{{#if showUpdateQuestion}}
<h2>Update Question</h2>
<form class="form-group">
  <label class="content">Question:</label>
  {{input value=content id="content"}}

  <label class="author">Author:</label>
  {{input value=author id="author"}}

  <label class="info">Additional Info:</label>
  {{input value=info id="info"}}
</form>
<button class="btn" {{action save}}
{{/if}}
<button class="btn" {{action "updateQuestion" question}}>Update Question</button>
