{{#if showQuestionForm}}
<h1>Add a new question</h1>
<form class="form-group">
  <label for="content">Question:</label>
  {{input value=content id="content"}}

  <label for="author">Author:</label>
  {{input value=author id="author"}}

  <label for="info">Additional Info:</label>
  {{input value=info id="info"}}
  <button class="btn" {{ action "saveNewQuestion"}}>Save Question </button>
</form>
{{else}}
  <button class = "btn" {{ action "showQuestionForm"}}>Add Question</button>
{{/if}}
