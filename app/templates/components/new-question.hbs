<div class="well" id="newquestion">
{{#if showQuestionForm}}
  <h1>Add a new question</h1>
  <form class="form-group">
    <label for="content">Question:</label>
    {{input value=content id="content"}}

    <label for="author">Author:</label>
    {{input value=author id="author"}}

    <label for="info">Additional Info:</label>
    {{input value=info id="info"}}
  </form>
  <button class="btn btn-primary" {{ action "saveNewQuestion"}}>Save Question </button>

{{else}}
  <button class ="btn btn-primary" {{ action "showQuestionForm"}}>Add Question</button>
{{/if}}
</div>
